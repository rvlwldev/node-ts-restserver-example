{
	"name": "ts-intranet",
	"version": "0.0.1",
	"description": "CUG/CPG/CCG 통합 테스트 RestAPI 서버",
	"main": "src/App.ts",
	"author": "",
	"scripts": {
		"start": "cross-env NODE_ENV=production pm2 start ./build/App.js --name ts-intranet-server",
		"stop": "pm2 stop ts-intranet-server && pm2 delete ts-intranet-server && pm2 kill",
		"dev": "cross-env NODE_ENV=development ts-node-dev -r tsconfig-paths/register --inspect --respawn --transpile-only ./src/app.ts",
		"dev:local": "cross-env NODE_ENV=localhost ts-node-dev -r tsconfig-paths/register --inspect --respawn --transpile-only ./src/app.ts",
		"dev:build": "cross-env NODE_ENV=development NODE_PATH=build nodemon build/App.js",
		"check": "npx eslint src --ext .ts",
		"build": "npm run check && tsc && tsc-alias && echo Project build was completed."
	},
	"dependencies": {
		"axios": "^1.7.2",
		"body-parser": "^1.20.2",
		"dotenv": "^16.4.5",
		"express": "^4.19.2",
		"glob": "^10.4.1",
		"mysql2": "^3.10.0",
		"pm2": "^5.4.0",
		"reflect-metadata": "^0.2.2",
		"routing-controllers": "^0.10.4",
		"typedi": "^0.10.0"
	},
	"devDependencies": {
		"@types/express": "^4.17.21",
		"@types/mysql": "^2.15.26",
		"@types/reflect-metadata": "^0.1.0",
		"@typescript-eslint/eslint-plugin": "^7.12.0",
		"cross-env": "^7.0.3",
		"esbuild": "^0.21.5",
		"eslint": "^8.0.0",
		"nodemon": "^3.1.3",
		"prettier": "3.3.0",
		"ts-loader": "^9.5.1",
		"ts-node-dev": "^2.0.0",
		"tsc-alias": "^1.8.10",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.4.5"
	}
}
