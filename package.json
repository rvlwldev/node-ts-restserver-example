{
	"name": "ts-intranet",
	"version": "0.0.1",
	"description": "CUG/CPG/CCG 통합 테스트 RestAPI 서버",
	"main": "src/App.ts",
	"author": "",
	"scripts": {
		"start": "cross-env NODE_ENV=PRODUCTION pm2 start ./build/App.run.js --name ts-intranet-server",
		"stop": "pm2 stop ts-intranet-server && pm2 delete ts-intranet-server && pm2 kill",
		"dev": "cross-env NODE_ENV=DEVELOPMENT ts-node-dev -r tsconfig-paths/register --inspect --respawn --transpile-only ./src/app.ts",
		"dev:local": "cross-env NODE_ENV=LOCALHOST ts-node-dev --inspect --respawn --transpile-only ./src/app.ts",
		"check": "npx eslint src --ext .ts",
		"build": "npm run check && tsc && echo Project build was completed."
	},
	"dependencies": {
		"axios": "^1.7.2",
		"body-parser": "^1.20.2",
		"dotenv": "^16.4.5",
		"express": "^4.19.2",
		"mysql2": "^3.10.0",
		"pm2": "^5.4.0",
		"reflect-metadata": "^0.2.2",
		"routing-controllers": "^0.10.4"
	},
	"devDependencies": {
		"@types/express": "^4.17.21",
		"@types/mysql": "^2.15.26",
		"@types/reflect-metadata": "^0.1.0",
		"@typescript-eslint/eslint-plugin": "^7.12.0",
		"cross-env": "^7.0.3",
		"eslint": "^8.0.0",
		"prettier": "3.3.0",
		"ts-node-dev": "^2.0.0",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.4.5"
	}
}
