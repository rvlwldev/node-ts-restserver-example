{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Launch Program",
        "program": "${workspaceFolder}/build/app.js",
        "preLaunchTask": "npm: build",
        "sourceMaps": true,
        "smartStep": true,
        "internalConsoleOptions": "openOnSessionStart",
        "outFiles": ["${workspaceFolder}/build/**/*.js"]
      },
      {
        "type": "node",
        "request": "attach",
        "name": "Attach to Inspector",
        "port": 9229,
        "address": "localhost",
        "restart": true,
        "sourceMaps": true,
        "outFiles": ["${workspaceFolder}/build/**/*.js"],
        "skipFiles": ["<node_internals>/**"]
      }
    ]
  }
  